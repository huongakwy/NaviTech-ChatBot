# Application Environment
APP_ENV=local

# PostgreSQL Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=chatbot
POSTGRES_PORT=5432

# Database URL (update host to 'db' when running in Docker)
DATABASE_URL=postgresql://postgres:mypassword@db:5432/chatbot

# FastAPI Configuration
FASTAPI_PORT=8000
DEBUG=true

# Qdrant Vector Database (update host to container name when using Docker network)
QDRANT_HOST=chatbot-qdrant
QDRANT_PORT=6333

# AI API Keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_MODEL=gpt-4o-mini

# Embedding Configuration
LEN_EMBEDDING=1536
